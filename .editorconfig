# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

# Rust
[*.rs]
indent_style = space
indent_size = 4

